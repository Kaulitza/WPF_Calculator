<Window x:Class="MyFirstApp.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFirstApp"
        mc:Ignorable="d"
        Title="Calculator Help" Height="200" Width="400">
    <Grid>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="Enter in numbers into the Operand text boxes. Then, click an operator button such as Add, Subtract, Multiply or Divide." 
            VerticalAlignment="Top"/>
        <Button 
            Content="Exit" 
            HorizontalAlignment="Left" 
            Margin="10,135,0,0" 
            VerticalAlignment="Top" 
            Width="75" Click="Button_Click"/>
    </Grid>
</Window>
